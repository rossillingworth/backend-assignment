{
  "openapi": "3.0.0",
  "info": {
    "title": "Insurance Policy API",
    "description": "API for managing insurance policies",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/policies/{id}": {
      "get": {
        "summary": "Get a policy by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Policy ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Policy found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PolicyWithProduct"
                }
              }
            }
          },
          "404": {
            "description": "Policy not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update a policy",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Policy ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PolicyUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Policy updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Policy"
                }
              }
            }
          },
          "404": {
            "description": "Policy not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a policy",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Policy ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Policy deleted successfully"
          },
          "404": {
            "description": "Policy not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/policies": {
      "get": {
        "summary": "Get policies by customer name",
        "parameters": [
          {
            "name": "customerName",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Customer name to search for"
          }
        ],
        "responses": {
          "200": {
            "description": "List of matching policies",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PolicyWithProduct"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - customerName is missing",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new policy",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PolicyCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Policy created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Policy"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Policy": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "pol_001"
          },
          "productId": {
            "type": "string",
            "example": "prod_motor"
          },
          "customerName": {
            "type": "string",
            "example": "Alice Smith"
          },
          "startDate": {
            "type": "string",
            "format": "date",
            "example": "2025-01-01"
          },
          "endDate": {
            "type": "string",
            "format": "date",
            "example": "2026-01-01"
          },
          "premium": {
            "type": "number",
            "example": 320
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "expired",
              "cancelled"
            ],
            "example": "active"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-01T12:00:00Z"
          }
        }
      },
      "PolicyWithProduct": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Policy"
          },
          {
            "type": "object",
            "properties": {
              "product": {
                "$ref": "#/components/schemas/Product"
              }
            }
          }
        ]
      },
      "PolicyCreate": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string"
          },
          "customerName": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          },
          "premium": {
            "type": "number"
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "expired",
              "cancelled"
            ]
          }
        },
        "required": [
          "productId",
          "customerName",
          "startDate",
          "endDate",
          "premium",
          "status"
        ]
      },
      "PolicyUpdate": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string"
          },
          "customerName": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          },
          "premium": {
            "type": "number"
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "expired",
              "cancelled"
            ]
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "basePrice": {
            "type": "number"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Policy not found"
          }
        }
      }
    }
  }
}